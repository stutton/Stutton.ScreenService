<Window x:Class="Stutton.ScreenService.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stutton.ScreenService.TestApp"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="125" 
        Width="200">
    <StackPanel Margin="10">
        <Button Content="Full Screen"
                Margin="0,0,0,5"/>
        <Button x:Name="windowButton"
                Content="Window"
                Margin="0,0,0,5" Click="windowButton_Click"/>
        <Button Content="Rectangle"/>
    </StackPanel>
</Window>
